<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android=
    "http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModifyItem"
    android:id="@+id/modifyItemLayout">

    <ImageView
        android:id="@+id/modifyImage"
        android:layout_width="180dp"
        android:layout_height="250dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/modifyText"
        android:layout_width="328dp"
        android:layout_height="285dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/bm_11yrs"
        android:hint="등록한 문장이 보여집니다"
        android:maxWidth="300dp"
        android:maxLength="200"
        android:textAlignment="center"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/modifyBtn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/bm_11yrs"
        android:text="수정하기"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/modifyText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/modifyImage"
        app:layout_constraintVertical_bias="0.4" />

    <Button
        android:id="@+id/exit"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/bm_11yrs"
        android:text="닫기"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/modifyText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageFindBtn"
        app:layout_constraintTop_toBottomOf="@+id/modifyImage"
        app:layout_constraintVertical_bias="0.4" />

    <Button
        android:id="@+id/imageFindBtn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/bm_11yrs"
        android:text="앨범"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/modifyText"
        app:layout_constraintStart_toEndOf="@+id/modifyBtn"
        app:layout_constraintTop_toBottomOf="@+id/modifyImage"
        app:layout_constraintVertical_bias="0.4" />
</android.support.constraint.ConstraintLayout>