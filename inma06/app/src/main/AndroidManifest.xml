<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teamnova.nova">
    <!-- 인터넷 연결 권한 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- camera, gallery -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />




    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name="com.teamnova.inma06.Profile.ProfileModifyActivity"></activity>
        <activity android:name="com.teamnova.inma06.Profile.HomeActivity" /> <!-- 메일 인증 액티비티 -->
        <activity
            android:name="com.teamnova.inma06.Register.CertMail"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" /> <!-- 스플래쉬(로딩) 액티비티 -->
        <activity
            android:name="com.teamnova.inma06.Loading.LoadingActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- 회원가입 액티비티 -->
        <activity
            android:name="com.teamnova.inma06.Register.RegisterActivity"
            android:windowSoftInputMode="adjustResize" /> <!-- 로그인 액티비티 -->
        <activity
            android:name="com.teamnova.inma06.Login.LoginActivity"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />

        <!-- 사진 촬영을 위한 provide -->
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.teamnova.inma06.provider"
            android:exported="false"
            android:grantUriPermissions="true">

            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

    </application>



</manifest>