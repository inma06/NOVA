<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teamnova.nova">

    <!--인터넷 연결 권한-->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">

        <!--스플래쉬(로딩) 액티비티-->
        <activity android:name="com.teamnova.inma06.Loading.LoadingActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--메일인증 액티비티-->
        <activity android:name="com.teamnova.inma06.CertEmail.CertActivity"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize">
        </activity>

        <!--회원가입 액티비티-->
        <activity
            android:name="com.teamnova.inma06.Register.RegisterActivity"
            android:windowSoftInputMode="adjustResize" />
        <!--로그인 액티비티-->
        <activity
            android:name="com.teamnova.inma06.Login.LoginActivity"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize">
        </activity>
    </application>

</manifest>